generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GuildModules {
  guildId String @id

  nicknameLogger Boolean @default(true)
  customRoles    Boolean @default(true)
}

model GuildMember {
  userId  String
  guildId String

  nicknames Nickname[]

  @@id([userId, guildId])
}

model Nickname {
  setAt DateTime @id
  name  String

  GuildMember        GuildMember? @relation(fields: [guildMemberUserId, guildMemberGuildId], references: [userId, guildId])
  guildMemberUserId  String?
  guildMemberGuildId String?
}
